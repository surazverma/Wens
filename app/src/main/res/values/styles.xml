<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="default_recycler_view_style">
        <item name="android:layout_width">@dimen/matchConstraintValue</item>
        <item name="android:layout_height">@dimen/matchConstraintValue</item>
    </style>


    <style name="tv_feed_overline_style">
        <item name="android:fontFamily">@font/frank_ruhl_libre</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/feedOverlineTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/overline_text_color</item>
    </style>

    <style name="tv_feed_headline_style">
        <item name="android:fontFamily">@font/playfair_display_bold</item>
        <item name="android:maxLines">3</item>
        <item name="android:textSize">@dimen/feedHeadlineTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/headline_text_color</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="tv_feed_body_style">
        <item name="android:fontFamily">@font/arapey</item>
        <item name="android:maxLines">5</item>
        <item name="android:textSize">@dimen/feedBodyPreviewTextSize</item>
        <item name="android:textColor">@color/body_preview_color</item>
        <item name="android:ellipsize">end</item>
    </style>


</resources>